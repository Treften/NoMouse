<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card"
        android:layout_width="300dp"
        android:layout_height="92dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#65421F"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/textViewTouchNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:translationX="10px"
            android:translationY="50px" />

        <TextView
            android:id="@+id/textViewMouseTouchNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:translationX="10px"
            android:translationY="100px" />

        <TextView
            android:id="@+id/textViewHitRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:translationX="10px"
            android:translationY="150px" />

        <TextView
            android:id="@+id/textViewGameTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:translationX="10px" />

    </androidx.cardview.widget.CardView>
</LinearLayout>